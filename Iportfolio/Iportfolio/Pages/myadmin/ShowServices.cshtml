@page
@model Iportfolio.Pages.myadmin.ShowServicesModel
@{
}
<div class="container">
    <div class="row justify-content-center">
        <h2> SHOW SERVICES</h2>
    </div>
    <div class="row">
        <div class="col-md-8">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Tittle</th>
                        <th scope="col">Description</th>
                        <th scope="col">IconName</th>
                        <th scope="col" colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.services)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.IconName</td>
                            <td>
                                <a class="btn btn-primary" asp-page="UpdateServices" asp-route-id="@item.Id">Update</a>

                            </td>
                            <td>
                                <a class="btn btn-danger" asp-page-handler="Delete" asp-route-id="@item.Id">Delete</a>

                            </td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
