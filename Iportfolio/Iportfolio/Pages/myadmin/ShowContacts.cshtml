@page
@model Iportfolio.Pages.myadmin.ShowContactsModel
@{
}
<div class="container">
    <div class="row justify-content-center">
        <h2> SHOW CONTACTS</h2>
    </div>
    <div class="row">
        <div class="col-md-8">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Subject</th>
                        <th scope="col">Message</th>
                        <th scope="col" colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.contacts)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                            <td>@item.Subject</td>
                            <td>@item.Message</td>
                            <td>
                                <a class="btn btn-primary" asp-page="UpdateContacts" asp-route-id="@item.Id">Update</a>

                            </td>
                            <td>
                                <a class="btn btn-danger" asp-page-handler="Delete" asp-route-id="@item.Id">Delete</a>

                            </td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>