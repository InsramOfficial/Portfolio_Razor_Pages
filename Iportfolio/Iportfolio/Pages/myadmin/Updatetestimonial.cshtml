@page
@model Iportfolio.Pages.myadmin.UpdatetestimonialModel
@{
}


<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="row justify-content-center">
            <h2> Update Testamonial</h2>
        </div>
        <div class="row justify-content-center">
            <div class=" col-md-6">
                <label class="form-label">Name </label>
                <input class="form-control" asp-for="testimonial.Name" />
                <input class="form-control" hidden asp-for="testimonial.Id" />
            </div>
        </div>
        <div class="row justify-content-center">
            <div class=" col-md-6">
                <label class="form-label">Designation </label>
                <input class="form-control" asp-for="testimonial.Designation" />
            </div>
        </div>
        <div class="row justify-content-center">
            <div class=" col-md-6">
                <label class="form-label">TheTestimonial </label>
                <input class="form-control" asp-for="testimonial.TheTestimonial" />
            </div>
        </div>
        <div class="row justify-content-center">
            <div class=" col-md-6">
                <label class="form-label">Image </label>
              <img  src="~/images/@Model.testimonial.Image"/>

            </div>
        </div>
        <div class="row justify-content-center">
            <div class=" col-md-6">
                <label class="form-label">Image </label>
                <input class="form-control" asp-for="testimonial.Photo" />
                <input class="form-control" hidden asp-for="testimonial.Image" />

            </div>
        </div>


        <div class="row justify-content-center">
            <div class=" col-md-6">

                <input type="submit" value="Update Testamonial" class="btn btn-primary" />
            </div>
        </div>

    </form>
</div>