@page
@model Iportfolio.Pages.myadmin.UpdateContactsModel
@{
}
<div class="container">
    <form method="post">
        <div class="row justify-content-center">
            <h2> UPDATE CONTACTS</h2>
        </div>
        <div class="row justify-content-center">
            <div class=" col-md-6">
                <label class="form-label">Name </label>
                <input class="form-control" asp-for="contact.Name" />
                <input class="form-control" hidden asp-for="contact.Id" />
            </div>
        </div>
        <div class="row justify-content-center">
            <div class=" col-md-6">
                <label class="form-label">Email </label>
                <input class="form-control" asp-for="contact.Email" />
            </div>
        </div>
        <div class="row justify-content-center">
            <div class=" col-md-6">
                <label class="form-label">Subject </label>
                <input class="form-control" asp-for="contact.Subject" />
            </div>
        </div>
        <div class="row justify-content-center">
            <div class=" col-md-6">
                <label class="form-label">Message </label>
                <input class="form-control" asp-for="contact.Message" />
            </div>
        </div>
        <div class="row justify-content-center">
            <div class=" col-md-6">

                <input type="submit" value="Update Contacts" class="btn btn-primary" />
            </div>
        </div>

    </form>
</div>